{
  "manifest_version": 3,
  "name": "LinkedIn Profile Scraper",
  "version": "1.0.0",
  "description": "A Chrome extension to scrape LinkedIn profile information.",
  "permissions": [
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "*://*.linkedin.com/*"
  ],
  "name": "Chrome Extension Starter",
  "version": "1.0.0",
  "description": "A starter template for a Chrome extension.",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {

// chrome-extension-template
      "matches": ["*://*.linkedin.com/in/*"],
      "matches": ["<all_urls>"],
      "js": ["content.js"]

    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
